{
  "flavor": "deployment",
  "metadata": {
    "labels": {
      "deliveryType": "MANUAL"
    }
  },
  "kind": "service",
  "disabled": true,
  "version": "0.1",
  "spec": {
    "enable_host_anti_affinity": false,
    "type": "application",
    "restart_policy": "Always",
    "release": {
      "strategy": {
        "type": "RollingUpdate"
      },
      "image": "${blueprint.self.artifacts.awesome-todo-test-deployment}"
    },
    "runtime": {
      "args": [],
      "command": [],
      "autoscaling": {
        "scaling_on": "CPU",
        "min": 1,
        "max": 1,
        "cpu_threshold": "50"
      },
      "size": {
        "cpu": "200m",
        "memory": "1Gi",
        "cpu_limit": "1000m",
        "memory_limit": "5Gi"
      },
      "health_checks": {
        "readiness_check_type": "None",
        "liveness_check_type": "None"
      }
    },
    "env": {
      "LOG_LEVEL": "INFO"
    },
    "cloud_permissions": {
      "aws": {
        "enable_irsa": false
      }
    }
  }
}