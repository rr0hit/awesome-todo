{
  "kind": "facets.modules.common.application",
  "apiVersion": "v2",
  "disabled": true,
  "metadata": {
  },
  "spec": {
    "release": {
      "strategy": "RollingUpdate",
      "build": {
        "image": "rr0hit/rockmongo:2.0"
      }
    },
    "runtime": {
      "healthCheck": {
        "startupTime": 30,
        "timeout": 20,
        "period": 30,
        "portName": "http"
      },
      "autoscaling": {
        "min": 1,
        "max": 1,
        "cpuThreshold": "50"
      },
      "size": {
        "namespace": "GENERAL_PURPOSE",
        "value": "MICRO"
      },
      "ports": [
        {
          "name": "http",
          "port": 8050
        }
      ]
    },
    "loadbalancing": {
      "rules": [
        {
          "ingress": "tools",
          "path": "/",
          "portName": "http"
        }
      ]
    },
    "permission": [],
    "env": {
      "MONGO_AUTH": {
        "type": "static",
        "default": "true"
      },
      "MONGO_HOSTS": {
        "type": "dynamic",
        "resourceType": "mongo_merged_details",
        "resourceName": "all",
        "attribute": "hosts"
      }
    }
  }
}
